<h1>Sign in</h1>

<div class="sign-in">
    <%= form_for(:user, url: '/user/signin', method: :post ) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "sign in", class: "btn btn-primary" %>
    <% end %>
</div>